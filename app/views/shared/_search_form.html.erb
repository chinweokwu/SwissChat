<%= form_with url: search_rooms_path, method: :post, id: "room_search_form", data: {controller: "debounce"} do |form| %>
  <%= form.search_field :name_search, 
    value: params[:name_search],
    class: "bg-gray-700 focus:outline-none focus:ring-1 focus:ring-gray-100 rounded w-full text-sm text-gray-300 placeholder-gray-400 bg-gray-100 pl-5 py-2", 
      placeholder: "Search Rooms to Join...",
    data: { action: "input->debounce#search"} %>
<% end %>
<div id="search_results">
  <%= render 'rooms/search_results', rooms: @rooms %>
</div>